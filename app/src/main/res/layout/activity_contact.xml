<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0729b1"
    tools:context=".Book">
    <LinearLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="16dp"
        tools:context=".Book"
        android:layout_marginBottom="100dp"
        tools:layout_editor_absoluteX="90dp"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/textcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:text="تواصل معنا"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:padding="15dp"
            android:textColor="#3f3f44"
            android:inputType="text"


            android:hint="الإسم"
            android:textSize="25sp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-340dp"
            android:layout_marginRight="10dp"
            >

        </EditText>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-362dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="10dp"
            android:background="#EDEDED"
            android:hint=" البريد الإكترونى"


            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#3f3f44"
            android:textSize="25sp"


            >

        </EditText>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:padding="15dp"
            android:textColor="#3f3f44"
            android:inputType="number"


            android:hint="الهاتف"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="-362dp"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            >

        </EditText>
        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:padding="15dp"
            android:textColor="#3f3f44"
            android:inputType="text"
            android:textSize="25sp"

            android:hint="ادخل رسالتك"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="-362dp"
            android:layout_marginRight="10dp"
            >

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إرسال"
            android:id="@+id/sendbtn"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="-280dp"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/showMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="390dp"
            android:text="مواقعنا"
            android:textSize="20sp"
            android:textStyle="bold"

            />





    </LinearLayout>







    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:context=".Book"

        android:layout_marginLeft="100dp"
        >

        <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icons8_facebook__2_" />
        <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icons8_instagram" />



        <ImageView
            android:id="@+id/iv_twitter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/icons8_twitter" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>